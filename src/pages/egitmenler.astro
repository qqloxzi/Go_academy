---
import'../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';
const allPosts = Object.values(import.meta.glob('./egitmenler/*.md', { eager: true }));
const pageTitle = "EÄŸitmenlerimiz";
---
<BaseLayout>
  <h1 class="blog-page-title">{pageTitle}</h1>

  <ul class="blog-list">
  {allPosts.map((post) => (
    <li class="blog-item">
      <a href={post.url} class="blog-link">
        {post.frontmatter.image && (
          <img src={post.frontmatter.image}  class="blog-image" />
        )}
        <h2 class="blog-post-title">{post.frontmatter.title}</h2>
        <p class="blog-description">{post.frontmatter.description}</p>
      </a>
    </li>
  ))}
</ul>

</BaseLayout>
